# General
# Set your timezone (IANA)
TZ=Europe/Madrid

# Webserver (NestJS)
WEB_SERVER_PORT=8000

# Database (MariaDB)
# Replace placeholders with your DB host/credentials
DB_HOST=your_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=poiquest
DB_ROOT_PASSWORD=your_root_password

# Node environment
NODE_ENV=development

# JWT keys (use long, randomly generated secrets in production)
POIQUEST_JWT_ACCESS_KEY=REPLACE_WITH_STRONG_RANDOM_ACCESS_KEY
POIQUEST_JWT_REFRESH_KEY=REPLACE_WITH_STRONG_RANDOM_REFRESH_KEY
POIQUEST_JWT_ACCESS_TTL=1h
POIQUEST_JWT_REFRESH_TTL=7d

# Notes:
# - Copy this file to `.env` and fill the real values before running the app.
# - Do NOT commit real secrets to version control. Keep `.env` out of git.
# - For production, use environment-specific secret management (Vault, Azure Key Vault, etc.).
